{
  "manifest_version": 3,
  "name": "FocusGram",
  "version": "1.0",
  "description": "Removes all distractions from Instagram so you can focus.",
  "browser_specific_settings": {
    "gecko": {
      "id": "focusgram@stefanschfr",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.instagram.com/*"
      ],
      "js": [
        "rules.js",
        "utils.js",
        "content.js"
      ]
    }
  ],
  "permissions": [],
  "host_permissions": [
    "*://www.instagram.com/*"
  ]
}
